{
  "info": {
    "name": "Docmind IA API",
    "_postman_id": "1a95c7d6-89fb-4c20-91ef-03d2a5cd7f11",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"12345678\"\n}"
        }
      }
    },
    {
      "name": "Auth Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"12345678\"\n}"
        }
      }
    },
    {
      "name": "Upload Document",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/documents/upload",
        "body": {
          "mode": "formdata",
          "formdata": [{ "key": "file", "type": "file", "src": "" }]
        }
      }
    },
    {
      "name": "List Documents",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/documents"
      }
    },
    {
      "name": "Delete Document",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/documents/{{documentId}}"
      }
    },
    {
      "name": "Chat",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/chat",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"documentId\": \"{{documentId}}\",\n  \"message\": \"Resuma este documento\"\n}"
        }
      }
    },
    {
      "name": "List Conversations By Document",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/conversations/{{documentId}}"
      }
    },
    {
      "name": "List Messages",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/conversations/{{conversationId}}/messages"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" },
    { "key": "documentId", "value": "" },
    { "key": "conversationId", "value": "" }
  ]
}
